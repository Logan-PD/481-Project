@page "/AdditionalInfo"

<div class="upload-page">
  <div class="upload-page-content">
    <div class="upload-page-header">
      <h2>Additional Information</h2>
      <NavLink class="upload-page-close" href="UploadPage"> <button class="upload-page-close-button">x</button> </NavLink >
    </div>
    <div class="upload-content">
      <div>
        <img class="upload-image" src="images/@image" alt="">
      </div>
      <div class="upload-details-container">
        <div class="upload-details"> 
          <label for="upload-title">Title</label>
          <input type="text" class="upload-detail" id="upload-title" name="upload-title">
        </div>
        <div class="upload-details"> 
          <label for="upload-description">Description</label>
          <textarea class="upload-detail upload-description"></textarea>
        </div>
        <div class="upload-details"> 
          <label for="upload-price">Price</label>
          <input type="text" class="upload-detail" id="upload-price" name="upload-price">
        </div>
      </div>
    </div>
    <div class="upload-status-container">
      <p>Current Photo</p>
      <div class="upload-status">
        <button class="upload-status-bar">
          <div class="upload-status-bar-top">
            @image
          </div>
        </button>
      </div>
    </div>
     <NavLink href="UploadHomepage">
    <button class="continue-button">SAVE & CONTINUE</button>
     </NavLink >
  </div>
</div>


@using Microsoft.AspNetCore.WebUtilities
@inject NavigationManager navigationManager;
@code {

  string image = "street2.jpg";

  <!-- private void removeImage(int index) {
    images.RemoveAt(index);
  } -->
}

<script type="text/javascript" suppress-error="BL9992">

</script>


<style>
  .upload-page {
    background-color: #D9D9D9;
    display: flex;
    justify-content: center;
    height: 100vh; 
    width: 100vw;
  }

  .upload-page-content {
    width: 750px;
    display: flex;
    flex-direction: column;
    align-items: center;
  }

  .upload-page-header {
    display: grid;
    grid-template-columns: 1fr repeat(1, auto) 1fr;
    grid-column-gap: 5px;
    justify-items: center;
    width: 100%;
  }

  h2 {
    grid-column-start: 2;
    font-size: 36px;
    font-weight: 700;
    margin: 30px 0;
  }

  .upload-page-close {
    align-self: center;
    margin-left: auto;
    text-decoration: none;
  }

  .upload-page-close-button {
    display: flex;
    justify-content: center;
    align-items: center;
    height: 40px;
    width: 40px;
    border-radius: 50%;
    padding-bottom: 5px;
    font-size: 32px;
    font-weight: 700;
    color: #D9D9D9;
    background-color: #3D348B;
    opacity: 70%;
    align-self: center;
    margin-left: auto;
    margin-right: 50px;
  }

  .upload-content {
    display: flex;
    justify-content: center;
    width: 750px;
    height: 300px;
    gap: 30px;
  }

  .upload-image {
    height: 300px;
    width: 300px;
  }

  label {
    display: block;
    font-size: 20px;
    margin-bottom: 3px;
  }

  .upload-details-container {
    height: 300px;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
  }

  .upload-detail {
    width: 300px;
    height: 50px;
    background-color: #E0E2DB;
    border: 0px solid #E0E2DB;
    padding-bottom: 20px;
  }

  .upload-description {
    height: 75px;
  }

  .upload-status-container {
    margin-top: 10px;
    margin-bottom: 20px;
  }

  .upload-status-container p {
    color: #676767;
    font-weight: 600;
    margin-bottom: 2px;
  }

  .upload-status {
    display: flex;
    margin-bottom: 3px;
  }

  .upload-status-bar {
    display: inline-block;
    border: 1px solid black;
    width: 450px;
    animation-name: status-box;
    background-color: rgb(17, 175, 34, 0.1);
    margin-bottom: 2px;
    color: black;
    height: 40px;
    padding: 0px;
  }

  .upload-status-bar-top {
    display: flex;
    justify-content: space-between;
    align-items: center;
    height: 31px;
    padding-left: 10px;
  }

  button {
    background-color: #3D348B;
    color: white;
  }

  .continue-button {
    height: 40px;
    width: 250px;
    font-size: 20px;
    font-weight: 600;
    animation-name: continue-btn;
    pointer-events: all;
  }

  @@media only screen and (min-height: 700px) {
    .upload-page-content {
      margin-top: 4vh;
    }

    .upload-status-bars-container {
      height: 20vh;
    }
  }

</style>