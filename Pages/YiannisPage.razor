@page "/YiannisPage"

<div class="side-panel" style="left: -250px;">

</div>

<div class="container">
    <div class="sidebar" style="left: @(showPanel ? "0px" : "-250px");">
        
        <div class="new-folder-button-container">
            <button class = "add-folder" @onclick="addFolder"></button>    
        </div>
        <div class="folder-container">
            @foreach(var button in buttons)
            {
                <button class="folder-button" @onclick="@button.OnClick">@button.Label</button>
                 <span class="folder-text">Folder</span>
            }
        </div>

    </div>
    <div class="top-panel">
        <NavLink href="UploadPage">
            <button class="top-button">Upload</button>
        </NavLink>
        <button class="top-button">Collection Details</button>
        <button class="top-button">Compare...</button>
        <div class="search-bar">
            <input type="text" placeholder="Search..." @bind-value="searched" @onkeydown="Search">
        </div>

    </div>
    <div class="main">
       <button class="pictures-button"><img src='/images/picture2.jpg'></button>
       <button class="pictures-button"><img src='/images/picture1.jpg'></button>
       <button class="pictures-button"><img src='/images/picture3.jpg'></button>
       <button class="pictures-button"><img src='/images/picture4.jpg'></button>
       <button class="pictures-button"><img src='/images/picture1.jpg'></button>
    </div>
</div>

@code {
    List<ButtonInfo> buttons = new List<ButtonInfo>();
    private string searched = "";

    void Search(KeyboardEventArgs k)
    {
        if(k.Key == "Enter")
        {
            Console.WriteLine("Searched: " + searched);
        }
    }

    void addFolder()
    {
        // will have to open the upload page then once that is done come back here
        buttons.Add(new ButtonInfo{});
    }
    bool showPanel = true;

    class ButtonInfo
    {
        public string Label {get; set; }
        public Action OnClick {get; set; }
    }
}

