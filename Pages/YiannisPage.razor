@page "/YiannisPage"


<div class="side-panel" style="left: -250px;">

</div>

<div class="container">
    <div class="sidebar" style="left: @(showPanel ? "0px" : "-250px");">
        
        <div class="new-folder-button-container">
            <button class = "add-folder" @onclick="addFolder"></button>    
        </div>
        <div class="folder-container">
            @foreach(var button in buttons)
            {
                <button class="folder-button" @onclick="@button.OnClick">@button.Label</button>
                 <span class="folder-text">Folder</span>
            }
        </div>

    </div>
    <div class="top-panel">
        <button class="top-button">Upload</button>
        <button class="top-button">Collection Details</button>
        <button class="top-button">Compare...</button>
        <div class="search-bar">
            <input type="text" placeholder="Search...">
            <button type="submit">Go</button>
        </div>

    </div>
    <div class="main">
       
    </div>
</div>

@code {
    List<ButtonInfo> buttons = new List<ButtonInfo>();

    void addFolder()
    {
        buttons.Add(new ButtonInfo{});
    }
    bool showPanel = true;

    class ButtonInfo
    {
        public string Label {get; set; }
        public Action OnClick {get; set; }
    }
}

<style>
    .top-button {
        height: 50px;
        width: 170px;
        margin: 25px;
        color: white;
        border-radius: 5px;
        background: #3D348B;
    }
    .top-panel {
        display: flex;
        align-items: center;
        position: fixed;
        top: 0;
        left: 250px;
        height: 150px;
        width: 100%;
        background-color: #E2E2DF;
        transition: left 0.5s;
    }
    .folder-button
    {
        border: none;
        outline: none;
        cursor: pointer;
        color: transparent;
        height: 100px;
        width: 100px;
        background: url('https://api.iconify.design/material-symbols/folder-outline.svg?color=%233d348b')  no-repeat center center / contain
    }
    .folder-container {
        color: #3D348B;
        display: flex;
        flex-direction: column;
        align-items: center;
    }
    .folder-text {
        margin-top: 7px;
        fontsize: 12px;
        color: #000;
    }
    .sidebar {
        position: fixed;
        top: 0;
        left: -250px;
        height: 100%;
        width: 250px;
        background-color: #E2E2DF;
        transition: left 0.5s;
    }
    .add-folder {
        border: none;
        outline: none;
        cursor: pointer;
        color: transparent;
        height: 50px;
        width: 50px;
        background: url('https://api.iconify.design/ph/plus-circle-fill.svg?color=%233d348b')  no-repeat center center / contain
    }
    .new-folder-button {
        position: absolute;
        top: 0;
        left: 0;
        padding: 10px;
    }
    .search-bar {
        display: flex;
        align-items: center;
        padding-right: 5px 10px;
        width: 300px;
        border-radius: 5px;
    }
    .search-bar input {
        flex: 1;
        border: none;
        padding: 5px;
        font-size: 16px;
    }
    .main {
        flex: 1;
        padding: 20px;
    }
</style>