@page "/Compare/{image1}/{image2}"


<div class="main-container">

    <div class= "left-nav">
        <NavLink href="HomePage">
            <button title="Back" class="back-button"></button>
        </NavLink>
    </div>

    <div class="top-nav">
        <div class="top-panel">
            <div class="profileDropdown">
                <div class="profile" @onclick="menuToggle">
                    <img src="./images/alice.png" />
                </div>
                <div class="menu @menuClass">
                    <h3>Alice Smith</h3>
                    <ul>
                        <li><img src="./images/help.svg" /><a href="Help">Help</a></li>
                        <li><img src="./images/logout.png" /><a href="Login">Logout</a> </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
    

    <div class="main-content">
        <div class="grid-item" id="topBox">
            <h1 id="compStat">Comparison Statistics</h1>
            <div id="twoItems">
                <div class="item">
                    <h3 class="itemTitle">@image1</h3>
                    <img class="itemImg" src=@img1src>
                </div>
                <div class="item">
                    <h3 class="itemTitle">@image2</h3>
                    <img class="itemImg" src=@img2src>
                </div>
            </div>
            <div id="tableContainer">
            <table>
                <thead>
                    <tr>
                        <th scope="col"></th>
                        <th scope="col">Sports-Car</th>
                        <th scope="col">Forest</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <th scope="row">Yearly Sales</th>
                        <td>154</td>
                        <td>268</td>
                    </tr>
                    <tr>
                        <th scope="row">Monthly Sales</th>
                        <td>16</td>
                        <td>27</td>
                    </tr>
                    <tr>
                        <th scope="row">Daily Sales</th>
                        <td>3</td>
                        <td>5</td>
                    </tr>
                    <tr>
                        <th scope="row">Price Listed</th>
                        <td>8</td>
                        <td>14</td>
                    </tr>
                    <tr>
                        <th scope="row">Total Revenue</th>
                        <td>474$</td>
                        <td>783$</td>
                    </tr>
                </tbody>

            </table>
            </div>

        </div>
        
        <div class="grid-item" id="botLeft">
            <img style="max-height: 250px;" src="./images/sales_graph.png">
            <img style="max-height: 250px;" src="./images/sales_goal.png">
        </div>
        
        <div class="grid-item" id="botRight">
            <h2>Total Sales</h2>
            <img style="margin-left: 20px;" src="./images/test_graph.png">
        </div>
    </div>

    
</div> 

@code {
    [Parameter] 
    public string image1 {get;set;}
    [Parameter] 
    public string image2 {get;set;}
    public string img1src, img2src;
    protected override void OnInitialized() {
        img1src = $"images/{image1}.jpg"; 
        img2src = $"images/{image2}.jpg";
    }


/* Logic for profile dropdown */
    private bool showMenu = false;

    private string menuClass => showMenu ? "active" : "";

    private void menuToggle()
    {
        showMenu = !showMenu;
    }
/* End of logic for profile dropdown */

    }
}

