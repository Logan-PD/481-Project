@functions {
    string Active1 { get; set; }
    string Active2 { get; set; }
    string Active3 { get; set; }
    string Active4 { get; set; }
    string Active5 { get; set; }
    string PlusMinus1 { get; set; }
    string PlusMinus2 { get; set; }
    string PlusMinus3 { get; set; }
    string PlusMinus4 { get; set; }
    string PlusMinus5 { get; set; }
}


@code {
    protected override void OnInitialized() {
        Active1 = " ";
        Active2 = " ";
        Active3 = " ";
        Active4 = " ";
        Active5 = " ";
        PlusMinus1 = "plus-minus-toggle collapsed";
        PlusMinus2 = "plus-minus-toggle collapsed";
        PlusMinus3 = "plus-minus-toggle collapsed";
        PlusMinus4 = "plus-minus-toggle collapsed";
        PlusMinus5 = "plus-minus-toggle collapsed";
    }
    private async Task Toggle(int a) {
        switch (a) {
            case 1:
                if (String.Equals(Active1, " ")) {
                    Active1 = "active";
                } else {
                    Active1 = " ";
                }
                if (String.Equals(PlusMinus1, "plus-minus-toggle collapsed")) {
                    PlusMinus1 = "plus-minus-toggle";
                } else {
                    PlusMinus1 = "plus-minus-toggle collapsed";
                }
                break;
            case 2:
                if (String.Equals(Active2, " ")) {
                    Active2 = "active";
                } else {
                    Active2 = " ";
                }
                if (String.Equals(PlusMinus2, "plus-minus-toggle collapsed")) {
                    PlusMinus2 = "plus-minus-toggle";
                } else {
                    PlusMinus2 = "plus-minus-toggle collapsed";
                }
                break;
            case 3:
                if (String.Equals(Active3, " ")) {
                    Active3 = "active";
                } else {
                    Active3 = " ";
                }
                if (String.Equals(PlusMinus3, "plus-minus-toggle collapsed")) {
                    PlusMinus3 = "plus-minus-toggle";
                } else {
                    PlusMinus3 = "plus-minus-toggle collapsed";
                }
                break;
            case 4:
                if (String.Equals(Active4, " ")) {
                    Active4 = "active";
                } else {
                    Active4 = " ";
                }
                if (String.Equals(PlusMinus4, "plus-minus-toggle collapsed")) {
                    PlusMinus4 = "plus-minus-toggle";
                } else {
                    PlusMinus4 = "plus-minus-toggle collapsed";
                }
                break;
            case 5:
                if (String.Equals(Active5, " ")) {
                    Active5 = "active";
                } else {
                    Active5 = " ";
                }
                if (String.Equals(PlusMinus5, "plus-minus-toggle collapsed")) {
                    PlusMinus5 = "plus-minus-toggle";
                } else {
                    PlusMinus5 = "plus-minus-toggle collapsed";
                }
                break;
        }
    }
}



<style>
    .parent-container {
  padding: 0 10px 0 10px;
  max-width: 800px;
  width: 100%;
}
    /* Style the header with a grey background and some padding */
.header {
  overflow: hidden;
  background-color: #3D348B;
  padding: 20px 10px;
}

/* Style the header links */
.header a {
  float: left;
  color: white;
  text-align: center;
  padding: 12px;
  text-decoration: none;
  font-size: 18px;
  line-height: 25px;
  border-radius: 4px;
}

/* Style the logo link (notice that we set the same value of line-height and font-size to prevent the header to increase when the font gets bigger */
.header a.logo {
  font-size: 25px;
  font-weight: bold;
  background: url(../wwwroot/images/logo.png) no-repeat center center fixed;
}

/* Change the background color on mouse-over */
.header a:hover {
  background-color: #E0E2DB;
  color: black;
}

/* Style the active/current link*/
.header a.active {
  background-color: dodgerblue;
  color: white;
}

/* Float the link section to the right */
.header-right {
  float: right;
}

/* Add media queries for responsiveness - when the screen is 500px wide or less, stack the links on top of each other */
@@media screen and (max-width: 500px) {
  .header a {
    float: none;
    display: block;
    text-align: left;
  }
  .header-right {
    float: none;
  }
}
.faq {
  list-style: none;
  padding-left: 40px;
  padding-right: 20px;
}
.faq li {
  border-bottom: 1px solid #999999;
  margin-bottom: 15px;
}
.faq li.active .answer {
  max-height: 275px !important;
  padding-bottom: 25px;
  transition: max-height 0.5s ease, padding-bottom 0.5s ease;
}
.faq li.active .question {
  color: #808080;
  transition: color 0.5s ease;
}
.faq .answer {
  color: #090909;
  font-family: serif;
  font-size: 16px;
  line-height: 24px;
  max-height: 0;
  overflow: hidden;
  transition: max-height 0.5s ease, padding-bottom 0.5s ease;
}
.faq .plus-minus-toggle {
  cursor: pointer;
  height: 21px;
  position: absolute;
  width: 21px;
  left: -40px;
  top: 50%;
  z-index: 2;
}
.faq .plus-minus-toggle:before, .faq .plus-minus-toggle:after {
  background: #000;
  content: '';
  height: 5px;
  left: 0;
  position: absolute;
  top: 0;
  width: 21px;
  transition: transform 500ms ease;
}
.faq .plus-minus-toggle:after {
  transform-origin: center;
}
.faq .plus-minus-toggle.collapsed:after {
  transform: rotate(90deg);
}
.faq .plus-minus-toggle.collapsed:before {
  transform: rotate(180deg);
}
.faq .question {
  color: #090909;
  font-family: sans-serif;
  font-size: 20px;
  font-weight: 800;
  text-transform: uppercase;
  position: relative;
  cursor: pointer;
  padding: 20px 0;
  transition: color 0.5s ease;
}
@@media screen and (max-width: 767px) {
  .faq .question {
    font-size: 18px;
  }
}
footer {
  text-align: center;
  padding: 3px;
  background-color: #3D348B;
  color: white;
}
</style>